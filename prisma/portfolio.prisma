generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/@prisma/portfolio-client"
  binaryTargets = ["debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_PORTFOLIO")
}

model Project {
  id          String   @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime @default(now()) @map("created_at")

  @@map("projects")
}

model Experience {
  id          String   @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime @default(now()) @map("created_at")

  @@map("experiences")
}


